@model List<Participantes>
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4" style="font-weight: 500;">Resultados</h1>
</div>

<div style="margin-top: 20px; margin-bottom: 30px;">
    <a asp-controller="Home" asp-action="Formulario"><button type="button" class="btn btn-warning">Nuevo Registro</button></a>
</div>

<div>
    
        <table class="table table-hover">
            <thead style="text-align: center;">
                <tr>
                    <th>Puesto</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Tiempo</th>
                    <th>Distancia</th>
                    <th>Lugar</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        @foreach (var participantes in Model)
    {
            <tr>
                    <td>@participantes.nombre</td>
                    <td>@participantes.apellido</td>
                    <td>@participantes.tiempo</td>
                    <td>@participantes.distancia</td>
                    <td>@participantes.lugar</td>
            </tr>
        
    }
    <div>
        @if (Model.Count == 0)
        {
            <strong style="color: red;">No se han registrado partcipantes.</strong>
        }
    </div>
    </table>
</div>
